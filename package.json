{
  "name": "marketing-campaigns-backend",
  "version": "1.0.0",
  "description": "Backend API for Marketing Campaigns Portal",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --ignore-watch node_modules --watch src src/server.ts",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "testTimeout": 30000,
    "maxWorkers": 1
  },
  "dependencies": {
    "@okta/okta-sdk-nodejs": "^7.0.0",
    "@usewaypoint/email-builder": "^0.0.8",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.65.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "twilio": "^5.6.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/kafka-node": "^3.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.19.75",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.5",
    "@types/supertest": "^6.0.2",
    "@types/twilio": "^3.19.3",
    "@types/winston": "^2.4.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.3",
    "node-mocks-http": "^1.16.2",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
